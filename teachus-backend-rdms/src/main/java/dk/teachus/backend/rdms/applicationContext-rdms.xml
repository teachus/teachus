<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">

	<!-- Data source -->
	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/teachus" />

	<!-- LiquiBase Database Schema Evolution Management -->
	<bean id="liquibase" class="dk.teachus.backend.db.TeachUsSpringLiquibase">
		<property name="dataSource" ref="dataSource" />
		<property name="changeLog" value="classpath:db-changelog-master.xml" />
	</bean>

	<bean id="persistenceManagerFactory" class="org.datanucleus.api.jdo.JDOPersistenceManagerFactory" destroy-method="close">
		<property name="connectionFactory" ref="dataSource" />
		<property name="persistenceProperties">
			<map>
				<entry key="datanucleus.identifier.case" value="PreserveCase" />
			</map>
		</property>
	</bean>

</beans>